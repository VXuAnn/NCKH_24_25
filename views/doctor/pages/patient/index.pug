extends ../../layouts/default.pug
block main
  .main-wrapper
    .page-wrapper
      .content
        .row
          .col-sm-4.col-3
            h4.page-title Patients
        .row
          .col-md-12
            .table-responsive
              table.table.table-border.table-striped.custom-table.datatable.mb-0
                thead
                  tr
                    th Name
                    th Age
                    th Address
                    th Phone
                    th Email
                tbody
                  each patient in patients
                    tr
                      td
                        img.rounded-circle.m-r-5(width='28' height='28' src='/assets/img/user.jpg' alt='')
                        |  #{patient.fullName}
                      td #{new Date().getFullYear() - new Date(patient.dateOfBirth).getFullYear()} 
                      td #{patient.address}
                      td #{patient.phone}
                      td #{patient.email}

  .sidebar-overlay(data-reff='')

