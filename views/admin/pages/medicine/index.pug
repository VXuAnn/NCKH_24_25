extends ../../layouts/default.pug

block main 
  .page-wrapper
    .content
      .row
        .col-sm-4.col-3
          h4.page-title Medicine
        .col-sm-8.col-9.text-right.m-b-20
          a.btn.btn-primary.float-right.btn-rounded(href=`/${prefixAdmin}/medicine/create`)
            i.fa.fa-plus
            |  Add Medicine
      .row.filter-row
        .col-sm-6.col-md-3
          .form-group.form-focus
            label.focus-label Medicine Name
            input.form-control.floating(type='text')
        .col-sm-6.col-md-3
          .form-group.form-focus.select-focus
            label.focus-label Type
            select.form-control(name="type")
              each type in typemedicines 
                option(value=type.title) #{type.title}
        .col-sm-6.col-md-3
          a.btn.btn-success.btn-block(href='#')  Search 
      .row
        .col-md-12
          .table-responsive
            table.table.table-striped.custom-table
              thead
                tr
                  th Position
                  th Name
                  th Type
                  th Price
                  th Stock
                  th Status
                  th.text-right Action
                tbody
                  each item, index in medicines
                    tr
                      td #{index+1}
                      td #{item.name}
                      td #{item.type}
                      td #{item.price}
                      td #{item.stock}
                      td
                        if item.status === 'active'
                          span.custom-badge.status-green Active
                        else
                          span.custom-badge.status-red Inactive
                      td.text-right
                        a.btn.btn-primary(href=`/${prefixAdmin}/medicines/edit/${item.id}`)
                          i.fa.fa-pencil.m-r-5
                          | Edit
                        a.btn.btn-danger.m-l-5(href=`/${prefixAdmin}/products/delete/${item.id}` data-toggle='modal' data-target='#delete_employee')
                          i.fa.fa-trash-o.m-r-5
                          | Delete
                
    #delete_employee.modal.fade.delete-modal(role='dialog')
      .modal-dialog.modal-dialog-centered
        .modal-content
          .modal-body.text-center
            img(src='assets/img/sent.png' alt='' width='50' height='46')
            h3 Are you sure want to delete?
            .m-t-20
              a.btn.btn-white(href='#' data-dismiss='modal') Close
              button.btn.btn-danger(type='submit') Delete
  .sidebar-overlay(data-reff='')
  script(src='assets/js/jquery-3.2.1.min.js')
  script(src='assets/js/popper.min.js')
  script(src='assets/js/bootstrap.min.js')
  script(src='assets/js/jquery.dataTables.min.js')
  script(src='assets/js/dataTables.bootstrap4.min.js')
  script(src='assets/js/jquery.slimscroll.js')
  script(src='assets/js/select2.min.js')
  script(src='assets/js/moment.min.js')
  script(src='assets/js/bootstrap-datetimepicker.min.js')
  script(src='assets/js/app.js')
