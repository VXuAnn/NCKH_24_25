extends ../../layouts/default.pug

block main
  .main-wrapper
    .page-wrapper
      .content
        .row
          .col-lg-8.offset-lg-2
            h4.page-title Add Disease
        .row
          .col-lg-8.offset-lg-2
            form(
              action=`/${prefixAdmin}/disease/add`
              method="POST"
            )
              .form-group
                label(for="title")
                  |  Name
                input(
                  type="text"
                  class="form-control"
                  id="title"
                  name="title"
                  required
                )
                label(for="title")
                  |  Label
                //- input(
                //-   type="text"
                //-   class="form-control"
                //-   id="label"
                //-   name="label"
                //-   required
                //- )
                textarea.form-control(id="label" name="label" rows="5" textarea-mce)
                label(for="desc")
                  |  Mô tả
                textarea.form-control(id="desc" name="description" rows="5" textarea-mce)
                .text-center.m-t-20
                  button.btn.btn-primary.submit-btn(type="submit") Create Disease
