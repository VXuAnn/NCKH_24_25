extends ../../layouts/default.pug

block main 
  .page-wrapper
    .content
      .row
        .col-sm-4.col-3
          h4.page-title Employee
        .col-sm-8.col-9.text-right.m-b-20
          a.btn.btn-primary.float-right.btn-rounded(href=`/${prefixAdmin}/accounts/add`)
            i.fa.fa-plus
            |  Add Employee
      .row.filter-row
        .col-sm-6.col-md-3
          .form-group.form-focus
            label.focus-label Employee ID
            input.form-control.floating(type='text')
        .col-sm-6.col-md-3
          .form-group.form-focus
            label.focus-label Employee Name
            input.form-control.floating(type='text')
        .col-sm-6.col-md-3
          .form-group.form-focus.select-focus
            label.focus-label Role
            select.select.floating
              option Select Role
              option Nurse
              option Pharmacist
              option Laboratorist
              option Accountant
              option Receptionist
        .col-sm-6.col-md-3
          a.btn.btn-success.btn-block(href='#')  Search 
      .row
        .col-md-12
          .table-responsive
            table.table.table-striped.custom-table
              thead
                tr
                  th(style='min-width:200px;') Name
                  th Employee ID
                  th Email
                  th Mobile
                  th(style='min-width: 110px;') Join Date
                  th Role
                  th.text-right Action
              tbody
                tr
                  td
                    img.rounded-circle(width='28' height='28' src='assets/img/user.jpg' alt='')
                    h2 Albina Simonis
                  td NS-0001
                  td albinasimonis@example.com
                  td 828-634-2744
                  td 7 May 2015
                  td
                    span.custom-badge.status-green Nurse
                  td.text-right
                    .dropdown.dropdown-action
                      a.action-icon.dropdown-toggle(href='#' data-toggle='dropdown' aria-expanded='false')
                        i.fa.fa-ellipsis-v
                      .dropdown-menu.dropdown-menu-right
                        a.dropdown-item(href='edit-employee.html')
                          i.fa.fa-pencil.m-r-5
                          |  Edit
                        a.dropdown-item(href='#' data-toggle='modal' data-target='#delete_employee')
                          i.fa.fa-trash-o.m-r-5
                          |  Delete
                
    #delete_employee.modal.fade.delete-modal(role='dialog')
      .modal-dialog.modal-dialog-centered
        .modal-content
          .modal-body.text-center
            img(src='assets/img/sent.png' alt='' width='50' height='46')
            h3 Are you sure want to delete this Employee?
            .m-t-20
              a.btn.btn-white(href='#' data-dismiss='modal') Close
              button.btn.btn-danger(type='submit') Delete
  .sidebar-overlay(data-reff='')
  script(src='assets/js/jquery-3.2.1.min.js')
  script(src='assets/js/popper.min.js')
  script(src='assets/js/bootstrap.min.js')
  script(src='assets/js/jquery.dataTables.min.js')
  script(src='assets/js/dataTables.bootstrap4.min.js')
  script(src='assets/js/jquery.slimscroll.js')
  script(src='assets/js/select2.min.js')
  script(src='assets/js/moment.min.js')
  script(src='assets/js/bootstrap-datetimepicker.min.js')
  script(src='assets/js/app.js')
